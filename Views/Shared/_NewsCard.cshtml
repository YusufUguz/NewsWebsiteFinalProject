@model News

<div class="card mb-3" style="height:165px; max-width: 65%; margin-top: 15px; overflow: hidden;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageURL" class="img-fluid rounded-start" alt="@Model.Title"
                style="object-fit: cover; height: 165px;">
        </div>
        <div class="col-md-8">
            <div class="card-body d-flex flex-column justify-content-between" style="height: 100%;">
                <h5 class="card-title" style="font-family: Arial, Helvetica, sans-serif;">
                    <a href="@Url.Action("Index", "NewsDetails", new { newsID = @Model.NewsID})"
                        style="text-decoration: none; color: inherit;">
                        <strong>@Model.Title</strong>
                    </a>
                </h5>

                 @await Html.PartialAsync("_CategoryButton", @Model)

                <div class="d-flex justify-content-between align-items-center">

                    <small class="text-body-secondary">@Model.PublishDate.ToString("dd/MM/yyyy HH:MM")</small>

                    <div>
                        <a href="/News/Edit/@Model.NewsID" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit" style="color: white; font-size: 16px;"></i>
                        </a>
                        <a href="/News/Delete/@Model.NewsID" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash" style="color: white; font-size: 16px;"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>