@model List<News>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/home-index.css">
</head>

<body>
    <div class="content-container">
        <section id="featured-news-section" class="slider-container">
            <div class="slider-wrapper">
                <div class="slider">
                    @foreach (var news in Model)
                    {
                        <div class="slide">
                            <div class="image-container">
                                <img src="@news.ImageURL" alt="@news.Title">
                                <div class="overlay"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <button class="prev">&lt;</button>
            <button class="next">&gt;</button>
        </section>


        <section id="news-feed-section" class="news-feed">
            <div class="row">
                <h4>
                    Haber Akışı <i class="fas fa-newspaper"></i>
                </h4>
            </div>
            @foreach (var news in Model)
            {
                <div class="card mb-3" style="height:165px; max-width: 65%; margin-top: 15px; overflow: hidden;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@news.ImageURL" class="img-fluid rounded-start" alt="@news.Title"
                                style="object-fit: cover; height: 165px;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body d-flex flex-column justify-content-between" style="height: 100%;">
                                <h5 class="card-title" style="font-family: Arial, Helvetica, sans-serif;">
                                    <strong>@news.Title</strong></h5>
                                <a type="button" class="btn btn-primary" style="width: fit-content;">@news.Category!.CategoryName</a>

                                <div class="d-flex justify-content-between align-items-center">
                                    
                                        <small class="text-body-secondary">@news.PublishDate.ToString("dd/MM/yyyy")</small>
                                    
                                    <div>
                                        <a href="/News/Edit/@news.NewsID" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit" style="color: white; font-size: 16px;"></i>
                                        </a>
                                        <a href="/News/Delete/@news.NewsID" class="btn btn-danger btn-sm">
                                          <i class="fas fa-trash" style="color: white; font-size: 16px;"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>

    <script src="~/js/slider.js"></script>

</body>

</html>